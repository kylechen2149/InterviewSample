<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="record"
            type="com.kylechen2149.interviewsample.listInformation.model.ParkingInformation" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_parking"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alldesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@{@string/text_all_desc(record.id, record.name, record.address, String.valueOf(record.totalCar))}"
            android:layout_margin="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="@{@string/text_all_available(String.valueOf(record.availableCar), String.valueOf(record.charging), String.valueOf(record.standby))}" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>